{
  "name": "solarnetwork-api-core",
  "version": "0.2.0",
  "description": "SolarNetwork Core API",
  "keywords": [
    "solarnetwork"
  ],
  "homepage": "https://github.com/SolarNetwork/sn-api-core-js",
  "license": "Apache-2.0",
  "author": {
    "name": "Matt Magoffin",
    "email": "matt@solarnetwork.net"
  },
  "main": "dist/solarnetwork-api-core.js",
  "module": "src/index",
  "jsnext:main": "src/index",
  "files": ["lib", "src"],
  "repository": {
    "type": "git",
    "url": "https://github.com/SolarNetwork/sn-api-core-js.git"
  },
  "ava": {
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "apidoc": "jsdoc --configure jsdoc.config.json --template ./node_modules/ink-docstrap/template --package package.json --recurse --destination lib/apidoc src",
    "prebuild": "eslint index.js src",
    "build": "rm -rf build && mkdir build && rollup --banner \"$(preamble)\" -c -f umd -n sn -m -o lib/solarnetwork-api-core.js -- index.js && rollup --banner \"$(preamble)\" -c -f es -m -o lib/solarnetwork-api-core.es.js -- index.js",
    "postbuild": "uglifyjs --preamble \"$(preamble)\" lib/solarnetwork-api-core.js --in-source-map lib/solarnetwork-api-core.js.map --source-map lib/solarnetwork-api-core.min.js.map -c -m -o lib/solarnetwork-api-core.min.js",
    "prepublish": "npm run test && npm run build",
    "test": "ava",
    "coverage": "nyc --reporter=html ./node_modules/.bin/ava"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-core": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "eslint": "3",
    "global-object": "^1.0.0",
    "ink-docstrap": "^1.3.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.3",
    "nyc": "^11.0.3",
    "package-preamble": "0.1",
    "rollup": "0.43",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-includepaths": "^0.2.2",
    "uglify-js": "^3.0.23"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "d3-time-format": "^2.0.5",
    "uri-js": "^3.0.2"
  }
}
