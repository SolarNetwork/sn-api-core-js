{
  "name": "solarnetwork-api-core",
  "version": "0.23.1-dev.0",
  "description": "SolarNetwork Core API",
  "keywords": [
    "solarnetwork"
  ],
  "homepage": "https://github.com/SolarNetwork/sn-api-core-js",
  "license": "Apache-2.0",
  "author": {
    "name": "SolarNetwork Foundation",
    "email": "code@solarnetwork.net"
  },
  "main": "lib/solarnetwork-api-core.js",
  "module": "lib/solarnetwork-api-core.es.js",
  "jsnext:main": "lib/solarnetwork-api-core.es.js",
  "files": [
    "lib.js",
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SolarNetwork/sn-api-core-js.git"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "apidoc": "jsdoc --configure jsdoc.config.json --template ./node_modules/ink-docstrap/template --package package.json --recurse --destination docs/api src",
    "prebuild": "eslint lib.js src",
    "build": "rm -rf build && mkdir build && rollup --config rollup.config.js --banner \"$(preamble)\" -f umd -n sn -m -o lib/solarnetwork-api-core.js -- lib.js && rollup --config rollup.config.es.js --banner \"$(preamble)\" -f es -m -o lib/solarnetwork-api-core.es.js -- lib.js",
    "postbuild": "./node_modules/uglify-js/bin/uglifyjs --beautify \"preamble='$(preamble)'\" --source-map content=lib/solarnetwork-api-core.js.map,filename=lib/solarnetwork-api-core.min.js.map -c -m -o lib/solarnetwork-api-core.min.js -- lib/solarnetwork-api-core.js && ./node_modules/uglify-js/bin/uglifyjs --beautify \"preamble='$(preamble)'\" --source-map content=lib/solarnetwork-api-core.es.js.map,filename=lib/solarnetwork-api-core.es.min.js.map -c -m -o lib/solarnetwork-api-core.es.min.js -- lib/solarnetwork-api-core.es.js",
    "prettier": "prettier \"src/**/*.js\" --check",
    "prettier:write": "prettier \"src/**/*.js\" --write",
    "test": "ava",
    "coverage": "nyc --reporter=html ./node_modules/.bin/ava",
    "release": "generate-release --current-version \"$(bin/remove-preid)\""
  },
  "config": {
    "generateRelease": {
      "no_confirm": false,
      "remote": "origin",
      "pre_commit_commands": [
        "npm run prettier:write",
        "npm run build"
      ],
      "post_commit_commands": [
        "npm test",
        "npm run apidoc"
      ],
      "post_complete_commands": [
        "npm publish",
        "npmversion --increment prepatch --preid dev --nogit-tag"
      ],
      "files_to_commit": [
        "./lib/*"
      ]
    }
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^4.0.0",
    "@babel/core": "^7.17.5",
    "@babel/plugin-external-helpers": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.7",
    "@rollup/plugin-babel": "^5.3.1",
    "ava": "^4.2.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.14.0",
    "generate-release": "^1.1.1",
    "global-object": "^1.0.0",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "3.6.7",
    "moment": "^2.29.3",
    "npmversion": "^1.7.0",
    "nyc": "^15.1.0",
    "package-preamble": "0.1",
    "prettier": "^2.6.2",
    "rollup": "^2.72.0",
    "rollup-plugin-includepaths": "^0.2.4",
    "semver": "^5.3.0",
    "uglify-js": "^3.15.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "crypto-js": "^3.1.9-1",
    "d3-array": "^1.2.1",
    "d3-collection": "^1.0.4",
    "d3-time-format": "^2.0.5",
    "uri-js": "^3.0.2"
  }
}
